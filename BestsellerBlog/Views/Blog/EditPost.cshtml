@model Post

<div class="mb-4">
    <h1>Edit Post</h1>
</div>



<form action="EditPost" method="POST">
    <div class="mb-3">
        <input type="hidden" value="@Model.Id" name="Id"/>
        <label for="titlepost" class="form-label">Title</label>
        <input id="titlepost" class="form-control" name="title" value="@Model.Title"/>
    </div>
    <div class="mb-3">
        <label for="contentpost" class="form-label">Content</label>
        <textarea id="contentpost" class="form-control" name="content">@Model.Content</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form> 
